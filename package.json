{
  "name": "@app/monorepo",
  "scripts": {
    "dev": "concurrently 'pnpm --filter=@app/client dev --clearScreen false' 'fastapi dev ./apps/server/main.py --port 4000'",
    "start": "python ./apps/server/app.py",
    "fmt": "prettier --write ."
  },
  "devDependencies": {
    "concurrently": "9.2.1",
    "prettier": "3.6.2",
    "prettier-plugin-tailwindcss": "0.6.14"
  },
  "pnpm": {
    "neverBuiltDependencies": []
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2,
    "semi": false,
    "arrowParens": "avoid",
    "plugins": [
      "prettier-plugin-tailwindcss"
    ]
  }
}
